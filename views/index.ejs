<%- include("header") %>

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner" style="height: 566px; width: 100%;">
            <div class="carousel-item active" data-bs-interval="5000">
                <img class="d-block w-100" src="../images/image1.jpg" alt="First slide">
            </div>
            <div class="carousel-item" data-bs-interval="5000">
                <img class="d-block w-100" src="../images/image2.jpg" alt="Second slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div>
        <div class="border search bg-secondary text-center center-div" style="height: 103px;">
            <form method="post" action="/osr/search">
                <div class="form-group pt-4">
                    <input type="text" class='w-50' placeholder="Search" name="Search">
                </div>
                <button type='submit' name="action" value="Recently Added" class='btn-success rounded-pill'>Search</button>
            </form>

        </div>
    </div>
<%- include("footer") %>