    <div id='Resource' class='pt-5'>
        <div class="container w-50 border py-4">
            <div class="title text-center center-div">
                <h2 clas="font-weigth-bold">Add Resouce</h2>
                <small class='form-text text-muted text-center'>You can add any image, pdf or links</small>
            </div>
            <form method="post" action="#">
                <div class="form-group">
                    <label for="ContentURL1">Title<span style="color: red;">*</span></label>
                    <input type="text" class="form-control form-control-sm" placeholder="Your Title">
                </div>
                <div class="form-group">
                    <label for="ContentFile1">Attach file</label>
                    <input type="file" class="form-control-file" id="ContentFile1">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="filetype" id="filetype1" value="option1">
                        <label class="form-check-label" for="filetype1">pdf</label>
                      </div>
                      <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="filetype" id="filetype2" value="option2">
                        <label class="form-check-label" for="filetype2">image</label>
                      </div>
                </div>
                <div class="form-group">
                    <label for="ContentURL1">ADD URL (optional)</label>
                    <input type="text" class="form-control form-control-sm" placeholder="Url if any">
                </div>
                <div class="form-group">
                    <label for="Description">ADD Description</label>
                    <textarea class="form-control" id="Description" rows="2"></textarea>
                </div>
                <div class="text-center center-div">
                    <button type='reset' class='btn-success rounded-pill' id="form-btn">Reset </button>
                    <button type='submit' class='btn-success rounded-pill' id="form-btn">ADD</button>
            </div></form>
        </div>
    </div>
    </script>
